{
  "kind": "collectionType",
  "collectionName": "employees",
  "info": {
    "singularName": "employee",
    "pluralName": "employees",
    "displayName": "employee",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "empNo": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 12,
      "minLength": 12
    },
    "Name": {
      "type": "string",
      "required": true,
      "maxLength": 50
    },
    "Designation": {
      "type": "string",
      "required": true
    },
    "joinDate": {
      "type": "date",
      "required": true
    },
    "permanentDate": {
      "type": "date"
    },
    "hubstaffEnabled": {
      "type": "boolean",
      "required": true
    },
    "employementStatus": {
      "type": "enumeration",
      "enum": [
        "Intern",
        "Probation",
        "Permanent"
      ],
      "required": true
    },
    "grossSalary": {
      "type": "biginteger",
      "required": true
    },
    "leavesRemaining": {
      "type": "float",
      "required": true
    },
    "salarySlipRequired": {
      "type": "boolean",
      "required": true
    },
    "monthly_salaries": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::monthly-salary.monthly-salary",
      "mappedBy": "employee"
    },
    "bank_detail": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::bank-detail.bank-detail",
      "mappedBy": "emp_no"
    },
    "loans": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::loan.loan",
      "mappedBy": "employee"
    },
    "wht": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::with-holding-tax.with-holding-tax",
      "inversedBy": "emp_no"
    }
  }
}
